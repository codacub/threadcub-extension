{
  "manifest_version": 3,
  "name": "ThreadCub",
  "version": "1.0.1",
  "description": "Export AI conversations from Claude, ChatGPT, Copilot, and other platforms as JSON",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon128.png",
        "icons/icon-48.png",
        "icons/icon-happy.png",
        "icons/icon-sad.png",
        "icons/icon-happier.png",
        "icons/threadcub-logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "cookies"
  ],
  
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://threadcub.com/*",
    "https://*.threadcub.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
  {
    "matches": [
      "https://claude.ai/*",
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://gemini.google.com/*",
      "https://copilot.microsoft.com/*"
    ],
    "css": [
      "assets/tokens.css",
      "assets/floating-button.css",
      "assets/side-panel.css"
    ],
    "js": [
      "src/ui/side-panel.js",
      "src/core/floating-button.js",
      "content.js"
    ],
    "run_at": "document_idle"
  }
],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ThreadCub Exporter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}